<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.carpool.dao.ApiAddressMapper">

    <!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.carpool.entity.AddressVo" id="addressMap">
        <result property="id" column="id"/>
        <result property="userId" column="user_id"/>
        <result property="userName" column="user_name"/>
        <result property="telNumber" column="tel_number"/>
        <result property="postalCode" column="postal_Code"/>
        <result property="nationalCode" column="national_Code"/>
        <result property="provinceName" column="province_Name"/>
        <result property="cityName" column="city_Name"/>
        <result property="countyName" column="county_Name"/>
        <result property="detailInfo" column="detail_Info"/>
        <result property="address" column="address"/>
        <result property="addressName" column="address_name"/>
        <result property="longitude" column="longitude"/>
        <result property="latitude" column="latitude"/>
        <result property="subject" column="subject"/>
        <result property="is_default" column="is_default"/>
        
        <result property="thoroughfare" column="thoroughfare"/>
        <result property="subThoroughfare" column="subThoroughfare"/>
        <result property="locality" column="locality"/>
        <result property="subLocality" column="subLocality"/>
        <result property="administrativeArea" column="administrativeArea"/>
        <result property="subAdministrativeArea" column="subAdministrativeArea"/>
    </resultMap>

    <select id="queryObject" resultMap="addressMap">
		select * from nideshop_address where id = #{value}
	</select>

    <select id="queryList" resultMap="addressMap">
        select * from nideshop_address
        <where>
            <if test="userId != null">
                and user_id = #{userId}
            </if>
            <if test="longitude != null">
                and longitude = #{longitude}
            </if>
            <if test="latitude != null">
                and latitude = #{latitude}
            </if>
            <if test="addressName != null">
                and address_name = #{addressName}
            </if>
        </where>
        <choose>
            <when test="sidx != null and sidx.trim() != ''">
                order by ${sidx} ${order}
            </when>
            <otherwise>
                order by id desc
            </otherwise>
        </choose>
        <if test="offset != null and limit != null">
            limit #{offset}, #{limit}
        </if>
    </select>

    <select id="queryTotal" resultType="int">
		select count(*) from nideshop_address 
		<where>
            <if test="userId != null">
                and user_id = #{userId}
            </if>
            <if test="longitude != null">
                and longitude = #{longitude}
            </if>
            <if test="latitude != null">
                and latitude = #{latitude}
            </if>
            <if test="addressName != null">
                and address_name = #{addressName}
            </if>
        </where>
	</select>

    <insert id="save" parameterType="com.carpool.entity.AddressVo" useGeneratedKeys="true" keyProperty="id">
		insert into nideshop_address(
			`user_id`,
			`user_name`,
			`tel_number`,
			`postal_Code`,
			`national_Code`,
			`province_Name`,
			`city_Name`,
			`county_Name`,
			`detail_Info`,
			`address`,
			`address_name`,
			`longitude`,
			`latitude`,
			`subject`,
			`thoroughfare`,
			`subThoroughfare`,
			`locality`,
			`subLocality`,
			`administrativeArea`,
			`subAdministrativeArea`,
			`is_default`)
		values(
			#{userId},
			#{userName},
			#{telNumber},
			#{postalCode},
			#{nationalCode},
			#{provinceName},
			#{cityName},
			#{countyName},
			#{detailInfo},
			#{address},
			#{addressName},
			#{longitude},
			#{latitude},
			#{subject},
			#{thoroughfare},
			#{subThoroughfare},
			#{locality},
			#{subLocality},
			#{administrativeArea},
			#{subAdministrativeArea},
			#{is_default})
	</insert>

    <update id="update" parameterType="com.carpool.entity.AddressVo">
        update nideshop_address
        <set>
            <if test="userId != null">`user_id` = #{userId}, </if>
            <if test="userName != null">`user_name` = #{userName}, </if>
            <if test="telNumber != null">`tel_number` = #{telNumber}, </if>
            <if test="postalCode != null">`postal_Code` = #{postalCode}, </if>
            <if test="nationalCode != null">`national_Code` = #{nationalCode}, </if>
            <if test="provinceName != null">`province_Name` = #{provinceName}, </if>
            <if test="cityName != null">`city_Name` = #{cityName}, </if>
            <if test="countyName != null">`county_Name` = #{countyName}, </if>
            <if test="detailInfo != null">`detail_Info` = #{detailInfo},</if>
            <if test="address != null">`address` = #{address},</if>
            <if test="addressName != null">`address_name` = #{addressName},</if>
            <if test="longitude != null">`longitude` = #{longitude},</if>
            <if test="latitude != null">`latitude` = #{latitude},</if>
            <if test="subject != null">`subject` = #{subject},</if>
            <if test="thoroughfare != null">`thoroughfare` = #{thoroughfare},</if>
            <if test="subThoroughfare != null">`subThoroughfare` = #{subThoroughfare},</if>
            <if test="locality != null">`locality` = #{locality},</if>
            <if test="subLocality != null">`subLocality` = #{subLocality},</if>
            <if test="administrativeArea != null">`administrativeArea` = #{administrativeArea},</if>
            <if test="subAdministrativeArea != null">`subAdministrativeArea` = #{subAdministrativeArea},</if>
            <if test="is_default != null">`is_default` = #{is_default}</if>
        </set>
        where id = #{id}
    </update>

    <delete id="delete">
		delete from nideshop_address where id = #{value}
	</delete>

    <delete id="deleteBatch">
        delete from nideshop_address where id in
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>