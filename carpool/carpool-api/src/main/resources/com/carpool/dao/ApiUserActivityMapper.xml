<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.carpool.dao.ApiUserActivityMapper">

    <!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.carpool.entitycarpool.UserActivityCarpoolVo" id="activityMap">
        <result property="id" column="id"/>
        <result property="userId" column="user_id"/>
        <result property="activityId" column="activity_id"/>
        <result property="isCollect" column="is_collect"/>
    </resultMap>

    <select id="queryObject" resultMap="activityMap">
		select * from nideshop_user_activity where id = #{value}
	</select>

    <select id="queryList" resultMap="activityMap">
        select * from nideshop_user_activity
        <where>
            <if test="userId != null">
                and user_id = #{userId}
            </if>
            <if test="activityId != null">
                and activity_id = #{activityId}
            </if>
        </where>
        <choose>
            <when test="sidx != null and sidx.trim() != ''">
                order by ${sidx} ${order}
            </when>
            <otherwise>
                order by id desc
            </otherwise>
        </choose>
        <if test="offset != null and limit != null">
            limit #{offset}, #{limit}
        </if>
    </select>

    <select id="queryTotal" resultType="int">
		select count(*) from nideshop_user_activity
		<where>
            <if test="userId != null">
                and user_id = #{userId}
            </if>
            <if test="activityId != null">
                and activity_id = #{activityId}
            </if>
        </where>
	</select>

    <insert id="save" parameterType="com.carpool.entitycarpool.UserActivityCarpoolVo" useGeneratedKeys="true" keyProperty="id">
		insert into nideshop_user_activity
		(
			`user_id`,
			`activity_id`,
			`is_collect`
		)
		values
		(
			#{userId},
			#{activityId},
			#{isCollect}
		)
	</insert>

    <update id="update" parameterType="com.carpool.entitycarpool.UserActivityCarpoolVo">
        update nideshop_user_activity
        <set>
            <if test="userId != null">`user_id` = #{userId},</if>
            <if test="activityId != null">`activity_id` = #{activityId},</if>
            <if test="isCollect != null">`is_collect` = #{isCollect}</if>
        </set>
        where id = #{id}
    </update>

    <delete id="delete">
		delete from nideshop_user_activity where id = #{value}
	</delete>

    <delete id="deleteBatch">
        delete from nideshop_user_activity where id in
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>

</mapper>