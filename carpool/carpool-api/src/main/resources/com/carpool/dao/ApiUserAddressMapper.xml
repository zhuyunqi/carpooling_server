<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.carpool.dao.ApiUserAddressMapper">

    <!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.carpool.entitycarpool.UserAddressCarpoolVo" id="addressMap">
        <result property="id" column="id"/>
        <result property="userId" column="user_id"/>
        <result property="addressId" column="address_id"/>
    </resultMap>

    <select id="queryObject" resultMap="addressMap">
		select * from nideshop_user_address where id = #{value}
	</select>

    <select id="queryList" resultMap="addressMap">
        select * from nideshop_user_address
        <where>
            <if test="userId != null">
                and user_id = #{userId}
            </if>
            <if test="addressId != null">
                and address_id = #{addressId}
            </if>
        </where>
        <choose>
            <when test="sidx != null and sidx.trim() != ''">
                order by ${sidx} ${order}
            </when>
            <otherwise>
                order by id desc
            </otherwise>
        </choose>
        <if test="offset != null and limit != null">
            limit #{offset}, #{limit}
        </if>
    </select>

    <select id="queryTotal" resultType="int">
		select count(*) from nideshop_user_address
		<where>
            <if test="userId != null">
                and user_id = #{userId}
            </if>
            <if test="addressId != null">
                and address_id = #{addressId}
            </if>
        </where>
	</select>

    <insert id="save" parameterType="com.carpool.entitycarpool.UserAddressCarpoolVo" useGeneratedKeys="true" keyProperty="id">
		insert into nideshop_user_address
		(
			`user_id`,
			`address_id`
		)
		values
		(
			#{userId},
			#{addressId}
		)
	</insert>

    <update id="update" parameterType="com.carpool.entitycarpool.UserAddressCarpoolVo">
        update nideshop_user_address
        <set>
            <if test="userId != null">`user_id` = #{userId},</if>
            <if test="addressId != null">`address_id` = #{addressId}</if>
        </set>
        where id = #{id}
    </update>

    <delete id="delete">
		delete from nideshop_user_address where id = #{value}
	</delete>
	
	<delete id="deleteByUidAid">
		delete from nideshop_user_address where user_id = #{0} and address_id=#{1}
	</delete>

    <delete id="deleteBatch">
        delete from nideshop_user_address where id in
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>

</mapper>