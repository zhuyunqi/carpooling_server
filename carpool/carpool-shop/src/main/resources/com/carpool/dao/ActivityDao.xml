<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.carpool.dao.ActivityDao">

    <resultMap type="com.carpool.entity.ActivityEntity" id="activityMap">
        <result property="id" column="id"/>
        <result property="userId" column="user_id"/>
        <result property="imUserId" column="im_user_id"/>
        <result property="name" column="name"/>
        <result property="date" column="date"/>
        <result property="collect" column="collect"/>
        <result property="imgUrl" column="img_url"/>
        <result property="addressId" column="address_id"/>
        <result property="describe" column="describe"/>
    </resultMap>

    <select id="queryObject" resultType="com.carpool.entity.ActivityEntity">
		select a.*, u.username as userName from nideshop_activity a
		left join nideshop_user u on u.id = a.user_id
		where a.id = #{value}
	</select>

    <select id="queryList" resultType="com.carpool.entity.ActivityEntity">
        select a.*, u.username as userName from nideshop_activity a 
        left join nideshop_user u on u.id = a.user_id
        WHERE 1=1
        <if test="name != null and name.trim() != ''">
            AND a.name LIKE concat('%',#{name},'%')
        </if>
        <choose>
            <when test="sidx != null and sidx.trim() != ''">
                order by ${sidx} ${order}
            </when>
            <otherwise>
                order by id desc
            </otherwise>
        </choose>
        <if test="offset != null and limit != null">
            limit #{offset}, #{limit}
        </if>
    </select>
    
    <select id="queryTotal" resultType="int">
        select count(*) from nideshop_activity
        WHERE 1=1
        <if test="name != null and name.trim() != ''">
            AND name LIKE concat('%',#{name},'%')
        </if>
        <if test="date != null and date.trim() != ''">
            AND date_format(date ,'%Y-%m-%d' ) = #{date}
    </if>
    </select>
    
    <delete id="delete">
		delete from nideshop_activity where id = #{value};
		delete from nideshop_user_activity where activity_id = #{value};
	</delete>

    <delete id="deleteBatch">
        delete from nideshop_activity where id in
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
        ;
        
        delete from nideshop_user_activity where activity_id in
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
        ;
        
    </delete>

</mapper>